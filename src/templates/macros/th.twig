{% macro th(th, opts = {}, loop = false) %}{% apply spaceless %}
    {%- set opts = {
        classes: {
            th: false,
            td: false,
        }
    }|merge(opts, true) %}
    {% set class = opts.classes.th ? opts.classes.th : opts.classes.td %}


    {% tag 'th' with { class: class } %}
        {{ th }}
    {% endtag %}
{% endapply %}{% endmacro %}
